<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.airbnb.controller.HostDashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #34495e; -fx-padding: 15;">
         <children>
            <Button onAction="#handleBack" text="â† Back" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Host Dashboard" textFill="white">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <TabPane>
         <tabs>
            <Tab text="My Properties">
               <content>
                  <VBox spacing="10.0" style="-fx-padding: 20;">
                     <children>
                        <TableView fx:id="propertiesTable" prefHeight="500.0">
                           <columns>
                              <TableColumn fx:id="propTitleCol" text="Title" prefWidth="200.0" />
                              <TableColumn fx:id="propLocationCol" text="Location" prefWidth="150.0" />
                              <TableColumn fx:id="propPriceCol" text="Price" prefWidth="100.0" />
                              <TableColumn fx:id="propRatingCol" text="Rating" prefWidth="100.0" />
                              <TableColumn fx:id="propActionsCol" text="Actions" prefWidth="150.0" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Bookings">
               <content>
                  <VBox spacing="10.0" style="-fx-padding: 20;">
                     <children>
                        <TableView fx:id="bookingsTable" prefHeight="500.0">
                           <columns>
                              <TableColumn fx:id="bookingPropertyCol" text="Property" prefWidth="200.0" />
                              <TableColumn fx:id="bookingGuestCol" text="Guest" prefWidth="150.0" />
                              <TableColumn fx:id="bookingCheckInCol" text="Check-in" prefWidth="120.0" />
                              <TableColumn fx:id="bookingCheckOutCol" text="Check-out" prefWidth="120.0" />
                              <TableColumn fx:id="bookingTotalCol" text="Total Price" prefWidth="120.0" />
                              <TableColumn fx:id="bookingStatusCol" text="Status" prefWidth="100.0" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Reviews">
               <content>
                  <VBox spacing="10.0" style="-fx-padding: 20;">
                     <children>
                        <ListView fx:id="reviewsList" prefHeight="500.0" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Earnings">
               <content>
                  <VBox spacing="20.0" style="-fx-padding: 30;">
                     <children>
                        <Label text="Earnings Summary" style="-fx-font-size: 20; -fx-font-weight: bold;" />
                        <VBox spacing="10.0" style="-fx-background-color: #27ae60; -fx-background-radius: 10; -fx-padding: 20; -fx-pref-width: 300;">
                           <children>
                              <Label fx:id="totalEarningsLabel" text="Total Earnings: $0" textFill="white" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                           </children>
                        </VBox>
                        <VBox spacing="10.0" style="-fx-background-color: #f39c12; -fx-background-radius: 10; -fx-padding: 20; -fx-pref-width: 300;">
                           <children>
                              <Label fx:id="pendingEarningsLabel" text="Pending Earnings: $0" textFill="white" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                           </children>
                        </VBox>
                        <Label fx:id="bookingCountLabel" text="Total Bookings: 0" style="-fx-font-size: 14;" />
                        <Label fx:id="avgRatingLabel" text="Average Rating: 0.0" style="-fx-font-size: 14;" />
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>

