<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.airbnb.controller.PropertyController">
   <top>
      <VBox>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #34495e; -fx-padding: 15;">
               <children>
                  <Button onAction="#handleBack" text="â† Back" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label text="Search Properties" textFill="white">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15;">
               <children>
                  <Label text="Location:" />
                  <TextField fx:id="locationField" promptText="Enter location" prefWidth="200.0" />
                  <Label text="Max Price:" />
                  <TextField fx:id="maxPriceField" promptText="Max price" prefWidth="100.0" />
                  <Label text="Min Rating:" />
                  <TextField fx:id="minRatingField" promptText="Min rating" prefWidth="100.0" />
                  <Button fx:id="searchButton" onAction="#handleSearch" text="Search" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                  <Button fx:id="clearButton" onAction="#handleClear" text="Clear" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true">
         <content>
            <VBox fx:id="propertiesContainer" spacing="15.0" style="-fx-padding: 20;">
               <children>
                  <Label fx:id="noResultsLabel" text="No properties found. Try adjusting your search criteria." visible="false" />
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>

