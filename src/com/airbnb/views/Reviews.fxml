<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.airbnb.controller.ReviewController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #34495e; -fx-padding: 15;">
         <children>
            <Button onAction="#handleBack" text="â† Back" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Reviews &amp; Ratings" textFill="white">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <VBox spacing="20.0" style="-fx-padding: 30;">
         <children>
            <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 20;">
               <children>
                  <Label text="Add a Review" style="-fx-font-size: 16; -fx-font-weight: bold;" />
                  <ComboBox fx:id="propertyCombo" promptText="Select Property" prefWidth="400.0" />
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Rating:" />
                        <ComboBox fx:id="ratingCombo" prefWidth="100.0" />
                     </children>
                  </HBox>
                  <TextArea fx:id="commentField" promptText="Write your review..." prefRowCount="4" wrapText="true" />
                  <Button fx:id="submitReviewButton" onAction="#handleSubmitReview" text="Submit Review" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-pref-width: 150;" />
                  <Label fx:id="reviewStatusLabel" textFill="#27ae60" visible="false" />
               </children>
            </VBox>
            
            <Separator />
            
            <VBox spacing="10.0">
               <children>
                  <Label text="All Reviews" style="-fx-font-size: 16; -fx-font-weight: bold;" />
                  <ListView fx:id="reviewsList" prefHeight="400.0" />
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>

